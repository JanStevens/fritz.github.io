---
import { Icon } from 'astro-icon/components';
import * as about from '../pages/about/about.md';
---

<header class="mx-auto pt-12 pb-2 relative">
  <article
    class="flex flex-col md:flex-col items-center gap-4 w-full max-w-2xl"
  >
    <div
      class="flex-shrink-0 w-40 md:w-48 rounded-full shadow-sm overflow-hidden"
    >
      <img
        alt="avatar"
        loading="eager"
        src="/profile.webp"
        class="grayscale-[50] hover:grayscale-0 transition-all duration-300 ease-in"
      />
    </div>

    <div class="text-center">
      <div class="flex justify-center items-center mb-2 relative">
        <h1 class="text-3xl font-extrabold tracking-tight md:text-3xl relative">
          {about.frontmatter.name}
        </h1>
      </div>
      <h2 class="text-lg mb-2 text-secondary">
        {about.frontmatter.designation}
      </h2>
      <div class="flex items-center justify-center mt-1">
        <Icon name="carbon:location" class="w-4 h-4 mr-1" />
        <p class="text-sm text-secondary">{about.frontmatter.location}</p>
      </div>
    </div>
  </article>
</header>

<style>
  @media (max-width: 768px) {
    .flex-col.justify-end {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }
  }
</style>
